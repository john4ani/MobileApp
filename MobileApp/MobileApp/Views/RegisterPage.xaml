<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileApp.Views.RegisterPage"
             xmlns:vm="clr-namespace:MobileApp.ViewModels">
    <ContentPage.BindingContext>
        <vm:RegisterViewModel/>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" x:Name="MasterLayout">
            <Entry Text="{Binding Email}" Placeholder="Email Address"/>
            <Entry Text="{Binding Password}" Placeholder="Password" IsPassword="True"/>
            <Entry Text="{Binding ConfirmPassword}" Placeholder="Confirm Password" IsPassword="True"/>

            <Button Command="{Binding RegisterCommand}" Text="Register"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>